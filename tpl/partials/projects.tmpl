{{ define "projects" }}
<div id="projects">
    {{- range .Projects }}
    <div data-aos="fade-up"
         data-aos-duration="1000"
         class="my-3 md:my-8 p-6 md:p-12 mx-auto even:bg-white/[0.03] group rounded-3xl transition-all duration-500 hover:bg-white/[0.05] border border-transparent even:border-white/5 hover:border-white/10">
        <div class="max-w-6xl grid grid-cols-12 gap-x-8 gap-y-14 items-center mx-auto">
            <a class="col-span-5 order-first group-even:order-last text-center"
               href="{{ .Url }}"
               target="_blank">
                <img class="h-12 inline-block"
                     src="/static/{{ .LogoFileName }}"
                     alt="{{ .Title }}"
                     title="{{ .Title }}"
                     width="{{ .LogoWidth }}"
                     height="{{ .LogoHeight }}"/>
            </a>
            <div class="col-span-7 text-sm opacity-75">
                <p class="mb-3 opacity-75">
                    {{ raw .Description }}
                </p>
                <span class="bold">{{ .Position }}</span>
            </div>
        </div>
    </div>
    {{ end }}
</div>
{{ end }}
